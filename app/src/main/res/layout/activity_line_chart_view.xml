<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textSize="16sp"
            android:text="hybrid1:"
            android:textAllCaps="false"/>
        <com.example.administrator.sample.view.custom.LineChartHybridView
            android:id="@+id/score_hybrid_float"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textSize="16sp"
            android:text="hybrid2:"
            android:textAllCaps="false"/>
        <com.example.administrator.sample.view.custom.LineChartHybridView
            android:id="@+id/score_hybrid_string"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textSize="16sp"
            android:text="singleLine1:"
            android:textAllCaps="false"/>
        <com.example.administrator.sample.view.custom.LineChartSingleFloat
            android:id="@+id/score_single_float"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textSize="16sp"
            android:text="singleLine2:"
            android:textAllCaps="false"/>
        <com.example.administrator.sample.view.custom.LineCHartSingleString
            android:id="@+id/score_single_string"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />


    </LinearLayout>


</ScrollView>