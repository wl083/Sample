<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/img_top_video_item_list"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/video_pic"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/title_video_item_list"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_top_video_item_list"
            />
        <View
            android:id="@+id/line_video_item_list"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/title_video_item_list"
            android:background="#dfd6d6"
            ></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/head_video_item_list"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/username_video_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:layout_toRightOf="@+id/head_video_item_list"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/count_video_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/eye_voideo_item_list"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_toLeftOf="@+id/count_video_item_list"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>