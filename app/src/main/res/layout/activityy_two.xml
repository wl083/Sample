<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipChildren="false"
            android:layout_marginBottom="@dimen/dimen_20dp"
            >

            <com.example.administrator.sample.autoScrollViewPager.AutoScrollViewPager
                android:id="@+id/viewpager_two"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="@dimen/dimen_10dp"/>
            <!--<com.youth.banner.Banner-->
            <!--android:id="@+id/banner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LoopViewPager效果:"
                android:layout_marginTop="20dp"
                />
            <com.example.administrator.sample.two.LoopViewPager
                android:id="@+id/loop_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                />
            <com.example.administrator.sample.two.LoopViewPager
                android:id="@+id/loop_pager1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MZBannerView效果:"
                android:layout_marginTop="20dp"
                />

            <com.example.administrator.sample.two.MZBannerView
                android:id="@+id/mz_view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:open_mz_mode="true"
                app:canLoop="true"
                app:indicatorAlign="left"
                app:indicatorPaddingLeft="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通效果:"
                android:layout_marginTop="20dp"
                />
            <com.example.administrator.sample.two.MZBannerView
                android:id="@+id/normal_viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:open_mz_mode="false"
                app:indicatorAlign="center"

                app:canLoop="true"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>